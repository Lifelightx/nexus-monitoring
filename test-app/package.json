{
    "name": "test-app",
    "version": "1.0.0",
    "description": "Test application for APM instrumentation",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "start:service-a": "env SERVICE_NAME=test-frontend-service PORT=3001 OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:30317 node --require ./tracing.js server.js",
        "start:service-b": "env SERVICE_NAME=test-worker-service PORT=3002 OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:30317 node --require ./tracing.js worker.js",
        "start:all": "npm run start:service-a & npm run start:service-b"
    },
    "dependencies": {
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.69.0",
        "@opentelemetry/exporter-trace-otlp-grpc": "^0.211.0",
        "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
        "@opentelemetry/resources": "^2.5.0",
        "@opentelemetry/sdk-node": "^0.211.0",
        "@opentelemetry/semantic-conventions": "^1.39.0",
        "axios": "^1.6.0",
        "express": "^4.18.2",
        "mongoose": "^8.0.0"
    }
}